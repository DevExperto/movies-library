<resources>
    <!-- Base application theme. -->
    <style name="Theme.MovieLibrary" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/ThemeEditTextStyle</item>
    </style>

    <style name="Theme.MovieLibrary.Activity">
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Theme.MovieLibrary.LinearLayout">
        <item name="colorPrimary">@android:color/holo_red_dark</item>
    </style>


    <style name="ThemeEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="LocalEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>